<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#132E47"
    tools:context=".Activity_Warframe">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWarframeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tvWarframeName"
                android:fontFamily="@font/bebas"
                android:textSize="45sp"
                android:textStyle="bold"
                android:textColor="#EBEEF5"/>

            <ImageView
                android:id="@+id/warframePicture2"
                android:layout_width="300dp"
                android:layout_height="380dp"
                android:background="#1E1E21"
                android:scaleType="centerInside"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/tvWarframeVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="@string/tvWarframeVersion"
                android:fontFamily="@font/anton"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#BF8D40"
                />

            <TextView
                android:id="@+id/tvWarframeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="@string/tvWarframeDescription"
                android:fontFamily="@font/roboto"
                android:textColor="#EBEEF5"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</LinearLayout>